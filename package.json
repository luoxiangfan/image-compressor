{
  "name": "js-image-compress",
  "version": "1.0.1",
  "license": "MIT",
  "description": "JavaScript image compressor.typescript support.",
  "type": "module",
  "main": "./dist/index.cjs",
  "browser": "dist/index.js",
  "unpkg": "dist/index.min.js",
  "jsdelivr": "dist/index.min.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:luoxiangfan/image-compressor.git"
  },
  "keywords": [
    "img",
    "image",
    "compress",
    "compressor",
    "compressor.js",
    "image-compressor",
    "lossy-compression",
    "javascript",
    "front-end",
    "web"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "type-check": "tsc --strict --noEmit",
    "format": "prettier --write src/",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "build": "unbuild",
    "release": "unbuild && npm run changelog && release-it"
  },
  "devDependencies": {
    "@types/node": "^22.7.6",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "release-it": "^17.10.0",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
